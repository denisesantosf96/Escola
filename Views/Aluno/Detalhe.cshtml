@model Aluno
@{
    ViewData["Title"] = "Adicionar um novo Aluno";
}


<div class="text-center">
    <h4>@if (Model.Id > 0)
        {
            @Html.Raw("Editar Aluno")
            ;
        }
        else
        {
            @Html.Raw("Incluir Aluno")
            ;
        }
    </h4>
</div>

<form method="POST" asp-action="Detalhe" asp-controller="Aluno" class="form p-5"
    style="border: 3px solid grey; background: #E6E6E6; border-radius: 15px; margin-top: 30px;">
    <div class="text-danger">@Html.ValidationSummary()</div>

    <div class="row">
        <div class="col-md-6">
            <input asp-for="Id" type="hidden">
            <input asp-for="IdEscola" type="hidden">
            <label for="inputNome" class="form-label">Nome</label>
            <input asp-for="Nome" type="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="inputCPF" class="form-label">CPF</label>
            <input asp-for="CPF" type="text" class="form-control" maxlength="14">
        </div>
    </div>

    <div class="row">        
        <div class="col-md-6">
            <label for="inputRG" class="form-label">RG</label>
            <input asp-for="RG" type="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="inputTelefone" class="form-label">Telefone</label>
            <input asp-for="Telefone" type="text" class="form-control">
        </div>
    </div>


    <div class="row">        
        <div class="col-md-6">
            <label for="inputEndereco" class="form-label">Endereço</label>
            <input asp-for="Endereco" type="text" class="form-control" placeholder="Rua/Avenida">
        </div>
        <div class="col-md-6">
            <label for="inputNumero" class="form-label">Número</label>
            <input asp-for="Numero" type="number" class="form-control">
        </div>
    </div>

    <div class="row">        
        <div class="col-md-6">
            <label for="inpuComplemento" class="form-label">Complemento</label>
            <input asp-for="Complemento" type="text" class="form-control"
                placeholder="Apartamento,condomínio,sala,etc.(opcional)">
        </div>
        <div class="col-md-6">
            <label for="inputBairro" class="form-label">Bairro</label>
            <input asp-for="Bairro" type="text" class="form-control">
        </div>
    </div>

    <div class="row">        
        <div class="col-md-6">
            <label for="inputCidade" class="form-label">Cidade</label>
            <input asp-for="Cidade" type="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="inputEstado" class="form-label">Estado</label>
            <input asp-for="Estado" type="text" class="form-control" placeholder="UF">
        </div>
    </div>

    <div class="row">        
        <div class="col-md-6">
            <label for="inputPais" class="form-label">País</label>
            <input asp-for="Pais" type="text" class="form-control" maxlength="9">
        </div>
        <div class="col-md-6">
            <label for="inputCEP" class="form-label">CEP</label>
            <input asp-for="CEP" type="text" class="form-control" maxlength="9">
        </div>
    </div>

    <div class="row">        
        <div class="col-md-6">
            <label for="inputDataNascimento" class="form-label">Data de Nascimento</label>
            <input asp-for="DataNascimento" type="datetime-local" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="inputNomeMae" class="form-label">Nome da Mãe</label>
            <input asp-for="NomeMae" type="text" class="form-control">
        </div>
    </div>

    <div class="row">        
        <div class="col-md-6">
            <label for="inputNomePai" class="form-label">Nome do Pai</label>
            <input asp-for="NomePai" type="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label class="form-label">Turma</label>
            <select asp-for="IdTurma" asp-items="@ViewBag.Turmas" class="form-control"></select>
        </div>
    </div>


    <input type="submit" value="Salvar" class="btn btn-success" style="margin-top: 30px; margin-bottom: 15px;">
    <input type="button" value="Voltar" class="btn btn-success" onclick="Voltar()"
        style="margin-top: 30px; margin-bottom: 15px;"></td>

    <div id="divpartialitens">

    </div>



</form>

<script>


    function Voltar() {
        window.location.href = "https://localhost:44370/Aluno";
    }

    window.onload = function () {
        $("#DataNascimento").inputmask('99/99/9999');
        $("#CPF").inputmask('999.999.999-99');
        $("#Telefone").inputmask('(99)99999-9999');

    }


   

</script>