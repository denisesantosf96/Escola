@model X.PagedList.IPagedList<Boletim>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

<table class="table">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Aluno(a)</th>

            <th>IdGradeAula</th>
            <th>Avaliação</th>

            <th>Nota</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {

            <tr>
                
            <td>@Model[i].Id</td>
            <td>@Model[i].IdAluno - @Model[i].Nome</td>
            <td>@Model[i].IdGradeAula</td>
            <td>@Model[i].DescricaoAvaliacao</td>
            <td>@Model[i].Nota</td>
            <td><input type="button" value="Editar" class="btn btn-dark" onclick="javascript:window.location=`/Boletim/Detalhe/${@Model[i].Id}`">
            <input type="button" value="Excluir" class="btn btn-danger" onclick="Excluir(@Model[i].Id)"></td>
            
            </tr>
            
            }
        
        </tbody>
    </table>

    @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina }))