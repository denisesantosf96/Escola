@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model X.PagedList.IPagedList<Escola>
@{
    ViewData["Title"] = "Cadastro de Escolas";
}

@section Scripts{

}
<div class="text-center">
    <h4>Cadastro de Escolas</h4>
    <input type="text" id="textopesquisa" class="form-control" onkeyup="VerificarDigitacao(event)" value="@HttpContextAccessor.HttpContext.Session.GetString("TextoPesquisa")" placeholder="âŒ•   Pesquisar">
    <input type="button" value="Limpar" onclick="Limpar()" class="btn btn-primary">
    <input type="button" value="Pesquisar" onclick="Pesquisar()" class="btn btn-primary">

    <a asp-area="" asp-controller="Escola" asp-action="Detalhe"><input type="button" value="Novo"
            class="btn btn-primary" style="margin-top: 30px; margin-bottom: 30px;"></a>
    <div id="divpartial">
        <partial name="~/Views/Escola/ListaPartialView.cshtml" />
    </div>
</div>

<script>

    function Limpar() {
        $('#textopesquisa').val(''); 
        Pesquisar();
    }

    function Pesquisar() {
        var result = $('#textopesquisa').val(); 
        var url = "/Escola/ListaPartialView";
        var parametros = { nome: result };
        $.get(url, parametros) 
            .done(function (data) {
                $('#divpartial').html(data);  
            });
    }

    function VerificarDigitacao(e) {
        var code = (e.keyCode ? e.keyCode : e.which);
        if (code == 13) { 
            Pesquisar();
        }
    }

    function Excluir(id) {
        var result = confirm("Tem certeza que quer excluir?");
        if (result) {
            var url = "/Escola/Excluir";
            var parametros = { id: id };
            $.get(url, parametros) 
                .done(function (data) { 

                    if (data.sucesso) { 
                        document.location.reload(true);
                    } else {
                        alert(data.mensagem);
                    }

                });
        }
    }
</script>